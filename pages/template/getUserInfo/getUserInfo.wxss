.overlay {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 99999;
    background: rgba(0,0,0,0.5);
}

.toastBox {
    position: relative;
    width: 600rpx;
    text-align: center;
    background: #fff;
    margin: 0 auto;
    border-radius: 8rpx;
    top: 50%;
    margin-top: -180rpx;
    height: 360rpx;
}

.msgBox {
    padding: 30rpx 0;
}

.msgTitle {
    font-size: 40rpx;
    color: #141414;
}

.msgContent {
    font-size: 32rpx;
    color: #7e7e7e;
    margin-top: 30rpx;
}

.btnAuth {
    font-size: 40rpx;
    color: #0cb602;
    border-top: 1rpx solid #dcdcde;
    border-radius: 0 0 8rpx 8rpx;
}